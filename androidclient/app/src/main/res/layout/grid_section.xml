<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/section"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:layout_marginTop="20dp"
    android:elevation="10dp">

    <TextView
        android:id="@+id/sectionName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/section_name"
        android:textSize="20sp"
        android:textStyle="bold">
    </TextView>

    <RelativeLayout
        android:id="@+id/category_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/category_image1"
            android:layout_width="130dp"
            android:layout_height="130dp">
        </ImageView>

        <TextView
            android:id="@+id/category_name1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_image1"
            android:gravity="center"
            android:text="@string/category_name"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/category_button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="50dp">

        <ImageView
            android:id="@+id/category_image2"
            android:layout_width="130dp"
            android:layout_height="130dp">
        </ImageView>

        <TextView
            android:id="@+id/category_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_image2"
            android:gravity="center"
            android:text="@string/category_name"
            android:textColor="@android:color/background_dark"
            android:textSize="18sp"
            android:textStyle="bold">
        </TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>