<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/restaurant_general_details"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/meal_detail_image"
                android:visibility="gone"
                android:layout_width="175dp"
                android:layout_height="175dp"
                android:layout_margin="20dp">
            </ImageView>

        </RelativeLayout>

        <TextView
            android:id="@+id/meal_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="@string/meal_example"
            android:textStyle="bold"
            android:textColor="?attr/textColor"
            android:textSize="26sp">
        </TextView>

        <RelativeLayout
            android:id="@+id/meal_info_suggested_rl"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/meal_info_suggested_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/meal_suggested"
                android:textColor="@android:color/holo_red_light"
                android:textSize="15sp">
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/meal_info_votes"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/vote_this_meal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="@string/vote_this_meal"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark"
                android:layout_marginBottom="30dp"
                >
            </TextView>

            <RelativeLayout
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="visible"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/vote_this_meal"
                >

                <Button
                    android:id="@+id/meal_info_up_vote"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:text="@string/upvote"
                    android:textColor="@color/cardview_light_background"
                    android:background="@drawable/rect_material_button_shape"
                    >
                </Button>

                <Button
                    android:id="@+id/meal_info_down_vote"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/meal_info_up_vote"
                    android:text="@string/downvote"
                    android:textColor="@color/cardview_light_background"
                    android:background="@drawable/rect_material_button_shape">
                </Button>

            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_marginTop="10dp">

            <ImageButton
                android:id="@+id/meal_add_button"
                android:background="@drawable/material_button_shape"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_add"
                android:layout_marginStart="20dp">
            </ImageButton>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="@string/add_meal_to_calc"
                android:textSize="18sp"
                android:textColor="?attr/textColor"
                android:layout_toEndOf="@+id/meal_add_button"
                android:gravity="center"
                android:layout_centerVertical="true">
            </TextView>

        </RelativeLayout>



        <!--Graph layout-->
        <RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/meal_info_portions"
            android:visibility="gone"
            >

            <TextView
                android:id="@+id/quantity_to_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginStart="20dp"
                android:text="@string/quantity_to_submit"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/background_dark">
            </TextView>

            <SeekBar
                android:id="@+id/quantity_slider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="10dp"
                android:max="100"
                android:progress="50"
                android:layout_below="@+id/quantity_to_submit">
            </SeekBar>

            <Button
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/quantity_slider"
                android:layout_marginTop="10dp"
                android:layout_centerHorizontal="true"
                android:text="Submit quantity"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/rect_material_button_shape">
            </Button>

        </RelativeLayout>

        <RelativeLayout
            android:gravity="center"
            android:layout_marginTop="10dp"
            >

            <Button
                android:id="@+id/meal_info_show_ingredients_btn"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="@string/show_ingredients"
                android:layout_centerHorizontal="true"
                android:textColor="@color/cardview_light_background"
                android:background="@drawable/rect_material_button_shape">
            </Button>

            <RelativeLayout
                android:id="@+id/meal_info_ingredients_rl"
                android:gravity="center"
                android:layout_marginTop="10dp"
                android:visibility="gone"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_below="@+id/meal_info_show_ingredients_btn"
                >

                <TextView
                    android:id="@+id/meal_info_no_ingredients"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:indeterminate="true"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:gravity="center"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="50dp"
                    android:text="@string/you_don_t_have_any_meal_ingredients"
                    android:textSize="26sp"
                    android:visibility="gone"
                    >
                </TextView>

                <RelativeLayout
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:visibility="visible"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    >
                    <ImageButton
                        android:id="@+id/meal_info_add_ingredients_button"
                        android:background="@drawable/material_button_shape"
                        android:layout_centerHorizontal="true"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_add"
                        android:visibility="gone"
                        android:layout_marginStart="20dp">
                    </ImageButton>

                    <ProgressBar
                        android:id="@+id/meal_info_progress_bar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        android:layout_centerInParent="true"
                        android:visibility="invisible">
                    </ProgressBar>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/meal_info_ingredient_item_list"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        tools:listitem="@layout/meal_card"
                        android:layout_below="@+id/meal_info_add_ingredients_button"
                        >
                    </androidx.recyclerview.widget.RecyclerView>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>

    </TableLayout>

</ScrollView>