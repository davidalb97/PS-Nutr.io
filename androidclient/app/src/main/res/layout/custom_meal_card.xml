<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/saved_meal_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:elevation="10dp"
    app:cardCornerRadius="15dp"
    android:focusable="true"
    android:background="?android:selectableItemBackground">

    <RelativeLayout
        android:id="@+id/custom_meal_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp">

        <TextView
            android:id="@+id/custom_meal_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="1dp"
            android:text="@string/item_name"
            android:textColor="@android:color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/custom_meal_quantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_meal_name"
            android:text="@string/meal_quantity_card"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/custom_meal_carbs_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_meal_quantity"
            android:text="@string/carbohydrates_amount_card"
            android:textSize="15sp" />

        <ImageButton
            android:id="@+id/add_custom_meal_to_calc"
            android:background="@drawable/material_button_shape"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_calculate"
            android:layout_marginEnd="10dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:visibility="invisible">
        </ImageButton>

        <ImageButton
            android:id="@+id/delete_item_button"
            android:background="@drawable/material_bin_button_background"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_delete"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@+id/add_custom_meal_to_calc"
            android:layout_centerVertical="true"
            android:visibility="invisible">
        </ImageButton>



    </RelativeLayout>

</androidx.cardview.widget.CardView>